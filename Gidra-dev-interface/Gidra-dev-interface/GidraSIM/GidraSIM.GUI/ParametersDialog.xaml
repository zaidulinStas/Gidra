<Window x:Class="GidraSIM.GUI.ParametersDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GidraSIM.GUI"
        mc:Ignorable="d"
        Title="Редактирование параметров" Height="450" Width="500">
    <Grid x:Name="mainGrid">
        <Button x:Name="save" Content="Сохранить" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="Save_Click"/>
        <WrapPanel x:Name="wrapPanel" HorizontalAlignment="Center" Margin="10,38,0,0" VerticalAlignment="Stretch"/>
        <TextBlock x:Name="titleBlock" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" TextWrapping="Wrap" Margin="20" Text="TextBlock" VerticalAlignment="Top"/>
    </Grid>
</Window>
