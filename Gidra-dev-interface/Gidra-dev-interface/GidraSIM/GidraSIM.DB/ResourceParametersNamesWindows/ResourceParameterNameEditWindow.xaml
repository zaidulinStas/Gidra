        <Button x:Name="btn_submit" Content="Сохранить" HorizontalAlignment="Left" Margin="40,86,0,0" VerticalAlignment="Top" Width="74" Click="btn_submit_Click"/>
        <ListView x:Name="lv_resources" HorizontalAlignment="Left" Height="248" Margin="178,10,0,0" VerticalAlignment="Top" Width="176" SelectedIndex="0" SelectedItem="{Binding SelectedResourceName}" DisplayMemberPath="Name" ItemsSource="{Binding ResourceNames}" />

