        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GidraSIM.DB.ResourceParametersNamesWindows"
        mc:Ignorable="d"
        Title="ResourceParameterNameEditWindow"  Height="336.429" Width="397.143">
    <Grid>
        <TextBox x:Name="tb_name" HorizontalAlignment="Left" Height="23" Margin="24,42,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
